<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <org.taulabs.androidgcs.views.AttitudeView
        android:id="@+id/attitude_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <org.taulabs.androidgcs.views.HeadingView
        android:id="@+id/heading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <org.taulabs.androidgcs.views.GpsView
        android:id="@+id/gps_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <org.taulabs.androidgcs.views.AltitudeView
        android:id="@+id/altitude_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/attitude_view"
        android:layout_centerVertical="true" />

    <org.taulabs.androidgcs.views.BatteryView
        android:id="@+id/battery_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gps_view"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <org.taulabs.androidgcs.views.FlightStatusView
        android:id="@+id/flight_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/battery_view"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>