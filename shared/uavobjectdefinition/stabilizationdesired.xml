<?xml version="1.0"?>
<xml>
  <object name="StabilizationDesired" singleinstance="true" settings="false">
    <meta>
      <description>The desired attitude that @ref StabilizationModule will try and achieve if FlightMode is Stabilized.  Comes from @ref ManaulControlModule.</description>
      <access gcs="readwrite" flight="readwrite"/>
      <telemetrygcs acked="false" updatemode="manual" period="0"/>
      <telemetryflight acked="false" updatemode="periodic" period="1000"/>
      <logging updatemode="manual" period="0"/>
    </meta>
    <data>
      <data name="Roll" units="degrees" type="float" elements="1"/>
      <data name="Pitch" units="degrees" type="float" elements="1"/>
      <data name="Yaw" units="degrees" type="float" elements="1"/>
      <data name="Throttle" units="%" type="float" elements="1"/>
      <!-- These values should match those in ManualControlCommand.Stabilization{1,2,3}Settings -->
      <data name="StabilizationMode" units="" type="enum" elementnames="Roll,Pitch,Yaw" options="None,Rate,Attitude,AxisLock,WeakLeveling,VirtualBar,RelayRate,RelayAttitude,CoordinatedFlight"/>
    </data>
  </object>
</xml>
