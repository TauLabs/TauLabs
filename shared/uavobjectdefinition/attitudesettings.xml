<?xml version="1.0"?>
<xml>
  <object name="AttitudeSettings" singleinstance="true" settings="true">
    <meta>
      <description>Settings for the @ref Attitude module used on CopterControl</description>
      <access gcs="readwrite" flight="readwrite"/>
      <telemetrygcs acked="true" updatemode="onchange" period="0"/>
      <telemetryflight acked="true" updatemode="onchange" period="0"/>
      <logging updatemode="manual" period="0"/>
    </meta>
    <data>
      <data name="BoardRotation" units="deg*100" type="int16" elementnames="Roll,Pitch,Yaw" defaultvalue="0,0,0"/>
      <data name="AccelKp" units="channel" type="float" elements="1" defaultvalue="0.05"/>
      <data name="AccelKi" units="channel" type="float" elements="1" defaultvalue="0.0001"/>
      <data name="AccelTau" units="" type="float" elements="1" defaultvalue="0.02"/>
      <data name="YawBiasRate" units="channel" type="float" elements="1" defaultvalue="0.000001"/>
      <data name="ZeroDuringArming" units="channel" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="TRUE"/>
      <data name="BiasCorrectGyro" units="channel" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="TRUE"/>
      <data name="FilterChoice" units="channel" type="enum" elements="1" options="CCC,PREMERLANI,PREMERLANI_GPS" defaultvalue="CCC"/>
      <data name="TrimFlight" units="channel" type="enum" elements="1" options="NORMAL,START,LOAD" defaultvalue="NORMAL"/>
    </data>
  </object>
</xml>
