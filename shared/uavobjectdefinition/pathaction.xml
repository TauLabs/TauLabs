<?xml version="1.0"?>
<xml>
  <object name="PathAction" singleinstance="false" settings="false">
    <meta>
      <description>A waypoint command the pathplanner is to use at a certain waypoint</description>
      <access gcs="readwrite" flight="readwrite"/>
      <telemetrygcs acked="false" updatemode="manual" period="0"/>
      <telemetryflight acked="false" updatemode="periodic" period="4000"/>
      <logging updatemode="periodic" period="1000"/>
    </meta>
    <data>
      <data name="Mode" units="" type="enum" elements="1" options="FlyEndpoint,FlyVector,FlyCircleRight,FlyCircleLeft,   DriveEndpoint,DriveVector,DriveCircleLeft,DriveCircleRight,   FixedAttitude,   SetAccessory,   DisarmAlarm" default="Endpoint"/>
      <data name="ModeParameters" units="" type="float" elements="4" default="0"/>
      <data name="EndCondition" units="" type="enum" elements="1" options="None,TimeOut,   DistanceToTarget,LegRemaining,BelowError,   AboveAltitude,AboveSpeed,   PointingTowardsNext,   PythonScript,   Immediate" default="None"/>
      <data name="ConditionParameters" units="" type="float" elements="4" default="0"/>
      <data name="Command" units="" type="enum" elements="1" options="OnConditionNextWaypoint,OnNotConditionNextWaypoint,  OnConditionJumpWaypoint,OnNotConditionJumpWaypoint,  IfConditionJumpWaypointElseNextWaypoint" default="OnConditionNextWaypoint"/>
      <data name="JumpDestination" units="waypoint" type="int16" elements="1" default="0"/>
      <data name="ErrorDestination" units="waypoint" type="int16" elements="1" default="0"/>
    </data>
  </object>
</xml>
