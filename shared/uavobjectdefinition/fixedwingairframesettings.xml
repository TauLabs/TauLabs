<xml>
	<object name="FixedWingAirframeSettings" singleinstance="true" settings="true" category="Platform">
		<description>Select airframe type.  Currently used by @ref ActuatorModule to choose mixing from @ref ActuatorDesired to @ref ActuatorCommand</description>
		<field name="AirframeType" units="" type="enum" elements="1" options="Classic,Elevon,Vtail" defaultvalue="Classic"/>
		
		<field name="RollChannel" units="" type="enum" elements="2" defaultvalue="None">
			<options>
				<option>None</option>
				<option>Channel1</option>
				<option>Channel2</option>
				<option>Channel3</option>
				<option>Channel4</option>
				<option>Channel5</option>
				<option>Channel6</option>
				<option>Channel7</option>
				<option>Channel8</option>
				<option>Channel9</option>
				<option>Channel10</option>
			</options>
		</field>
		
		<field name="PitchChannel"    cloneof="RollChannel"/>
		<field name="YawChannel"      cloneof="RollChannel"/>
		<field name="ThrottleChannel" cloneof="RollChannel"/>

<!--		<field name="ThrottleChannel" units="" type="int8" elements="2" defaultvalue="-1"/>-->
<!--		<field name="RollChannel" units="" type="int8" elements="2" defaultvalue="-1"/>-->
<!--		<field name="PitchChannel" units="" type="int8" elements="2" defaultvalue="-1"/>-->
<!--		<field name="YawChannel" units="" type="int8" elements="1" defaultvalue="-1"/>-->

		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="true" updatemode="onchange" period="0"/>
		<telemetryflight acked="true" updatemode="onchange" period="0"/>
		<logging updatemode="manual" period="0"/>
	</object>
</xml>
