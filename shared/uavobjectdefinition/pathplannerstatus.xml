<xml>
	<object name="PathPlannerStatus" singleinstance="true" settings="false" category="Navigation">
		<description>Status of the path planner</description>
		<field name="NumberOfWaypoints" units="" type="uint16" elements="1"/>

		<field name="ConvergenceStatus" units="" type="enum" elements="1" options="Reset,Converging,Converged" defaultvalue="Reset"/>
		<field name="PathAvailability" units="" type="enum" elements="1" options="None,Processing,PathReady,NoConvergence,OutOfMemory" defaultvalue="None"/>

		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="false" updatemode="manual" period="0"/>
		<telemetryflight acked="true" updatemode="throttled" period="1000"/>
		<logging updatemode="onchange" period="0"/>
	</object>
</xml>
