<xml>
    <object name="TrimAnglesSettings" singleinstance="true" settings="true">
        <description>The trim angle required for the UAV to fly straight and level.</description>
        <field name="Roll" units="degrees" type="float" elements="1" defaultvalue="0"/>
        <field name="Pitch" units="degrees" type="float" elements="1" defaultvalue="0"/>
        <field name="Yaw" units="degrees" type="float" elements="1" defaultvalue="0"/>
        <field name="FlightPhase" units="" type="enum" elements="1" options="Vx,Vy,Cruise,HalfFlaps,FullFlaps" defaultvalue="Cruise"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="true" updatemode="onchange" period="0"/>
        <telemetryflight acked="true" updatemode="onchange" period="0"/>
        <logging updatemode="manual" period="0"/>
    </object>
</xml>
