<?xml version="1.0"?>
<xml>
  <object name="HomeLocation" singleinstance="true" settings="true">
    <meta>
      <description>HomeLocation setting which contains the constants to tranlate from longitutde and latitude to NED reference frame.  Automatically set by @ref GPSModule after acquiring a 3D lock.  Used by @ref AHRSCommsModule.</description>
      <access gcs="readwrite" flight="readwrite"/>
      <telemetrygcs acked="true" updatemode="onchange" period="0"/>
      <telemetryflight acked="true" updatemode="onchange" period="0"/>
      <logging updatemode="manual" period="0"/>
    </meta>
    <data>
      <data name="Set" units="" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="FALSE"/>
      <data name="Latitude" units="deg * 10e6" type="int32" elements="1" defaultvalue="0"/>
      <data name="Longitude" units="deg * 10e6" type="int32" elements="1" defaultvalue="0"/>
      <data name="Altitude" units="m over geoid" type="float" elements="1" defaultvalue="0"/>
      <data name="Be" units="" type="float" elements="3" defaultvalue="0,0,0"/>
      <data name="g_e" units="m/s^2" type="float" elements="1" defaultvalue="9.81"/>
      <data name="GroundTemperature" units="deg C" type="int8" elements="1" defaultvalue="15"/>
      <data name="SeaLevelPressure" units="millibar" type="uint16" elements="1" defaultvalue="1013"/>
    </data>
  </object>
</xml>
